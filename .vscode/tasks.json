{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cxpm-create-build-directory",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${workspaceFolder}/build"
            ],
            "group": "build",
            "dependsOrder": "sequence"
        },
        {
            "dependsOn": [
                "cxpm-create-build-directory"
            ],
            "dependsOrder": "sequence",
            "options": {
                "cwd": "${workspaceFolder}/cxpm"
            },
            "label": "cxpm-build",
            "type": "shell",
            "command": "cxpm",
            "args": [
                "-b",
                "${workspaceFolder}/cxpm"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc"
        }
    ]
}